<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/gray_rounded_background"
    android:layout_margin="8dp"
    android:padding="16dp">

    <!-- Фото товара -->
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:background="#1AFFFFFF"
        android:src="@drawable/placeholder_image"
        android:contentDescription="Фото товара" />

    <!-- Название и модель -->
    <TextView
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Видеокарта NVIDIA RTX 4090"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:paddingBottom="4dp" />

    <!-- Цена -->
    <TextView
        android:id="@+id/productPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="199 999 ₽"
        android:textColor="#4169E1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- Характеристики -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Объем видеопамяти -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Память:"
                android:textColor="#80FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/memorySpec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 GB GDDR6X"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Частота GPU -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Частота GPU:"
                android:textColor="#80FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/clockSpec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2235 MHz"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Разъемы -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Разъемы:"
                android:textColor="#80FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/connectorsSpec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3x DP, 1x HDMI"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Кнопка в корзину -->
    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#4169E1"
        android:text="В КОРЗИНУ"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>