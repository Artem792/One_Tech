<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Верхняя панель -->
        <include layout="@layout/top_bar" />

        <!-- Кнопка назад -->
        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Назад"
            android:textColor="#4169E1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Прогресс бар загрузки -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:visibility="gone" />

        <!-- Изображение товара -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="#1AFFFFFF"
            android:src="@drawable/placeholder_image"
            android:contentDescription="Фото товара" />

        <!-- Основная информация -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#1AFFFFFF">

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Название товара"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 ₽"
                android:textColor="#4169E1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <!-- Наличие -->
            <TextView
                android:id="@+id/inStockText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ В наличии"
                android:textColor="#80FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Описание товара -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="12dp"
            android:background="#1AFFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Описание"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Описание товара..."
                android:textColor="#80FFFFFF"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- ОБЩИЙ БЛОК ХАРАКТЕРИСТИК -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="12dp"
            android:background="#1AFFFFFF">

            <!-- Заголовок "Характеристики" будет добавлен программно -->

            <LinearLayout
                android:id="@+id/specsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

        <!-- Кнопка добавления в корзину -->
        <Button
            android:id="@+id/addToCartButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#4169E1"
            android:elevation="8dp"
            android:text="ДОБАВИТЬ В КОРЗИНУ"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Отступ снизу -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout>

</ScrollView>