<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:elevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Top Bar with Delete Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/orderIdText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Заказ #123456"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@android:drawable/ic_delete"
            android:tint="#FF4444"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Удалить заказ"/>

        <TextView
            android:id="@+id/orderStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Ожидает"
            android:textSize="14sp"
            android:textColor="#FF9800"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/rounded_corner"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Customer Info -->
    <TextView
        android:id="@+id/userNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Иван Иванов"
        android:textSize="14sp"
        android:textColor="#CCCCCC"
        android:layout_marginBottom="4dp"/>

    <!-- Order Details -->
    <TextView
        android:id="@+id/orderDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01.01.2024 12:30"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginBottom="8dp"/>

    <!-- Bottom Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/itemsCountText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Товаров: 3"
            android:textSize="14sp"
            android:textColor="#CCCCCC"/>

        <TextView
            android:id="@+id/orderTotalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 000 ₽"
            android:textSize="16sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>