<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gray_rounded_background"
        android:padding="20dp">

        <!-- Заголовок -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Фильтры"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="20dp" />

        <!-- Сортировка -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сортировка"
            android:textColor="#4169E1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <RadioGroup
            android:id="@+id/sortRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <RadioButton
                android:id="@+id/sortDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Новые сначала"
                android:textColor="#FFFFFF"
                android:buttonTint="#4169E1"
                android:paddingVertical="10dp" />

            <RadioButton
                android:id="@+id/sortPriceAsc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Цена по возрастанию"
                android:textColor="#FFFFFF"
                android:buttonTint="#4169E1"
                android:paddingVertical="10dp" />

            <RadioButton
                android:id="@+id/sortPriceDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Цена по убыванию"
                android:textColor="#FFFFFF"
                android:buttonTint="#4169E1"
                android:paddingVertical="10dp" />

            <RadioButton
                android:id="@+id/sortNameAsc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Название А-Я"
                android:textColor="#FFFFFF"
                android:buttonTint="#4169E1"
                android:paddingVertical="10dp" />

        </RadioGroup>

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_marginVertical="10dp" />

        <!-- Фильтр по цене -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Цена"
            android:textColor="#4169E1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="От (₽)"
                    android:textColor="#80FFFFFF"
                    android:textSize="14sp"
                    android:paddingBottom="4dp" />

                <EditText
                    android:id="@+id/minPriceInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:hint="0"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/edittext_background"
                    android:paddingHorizontal="16dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="До (₽)"
                    android:textColor="#80FFFFFF"
                    android:textSize="14sp"
                    android:paddingBottom="4dp" />

                <EditText
                    android:id="@+id/maxPriceInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:hint="999999"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/edittext_background"
                    android:paddingHorizontal="16dp"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_marginVertical="10dp" />

        <!-- Фильтр по производителю -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Производитель"
            android:textColor="#4169E1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <Spinner
            android:id="@+id/manufacturerSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/spinner_background"
            android:paddingHorizontal="16dp"
            android:popupBackground="#2A2A2A"
            android:layout_marginBottom="20dp" />

        <!-- Разделитель -->
        <View
            android:id="@+id/categoryFiltersDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_marginVertical="10dp"
            android:visibility="gone" />

        <!-- Фильтры по категории -->
        <TextView
            android:id="@+id/categoryFiltersTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Характеристики"
            android:textColor="#4169E1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/categoryFiltersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />

        <!-- Кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Сбросить"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF6B6B"
                android:textStyle="bold"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnApply"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Применить"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4169E1"
                android:textStyle="bold"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>